generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum UserRole{
ADMIN
DEALER
WHEREHOUSE
DEVELOPER
USER
}

model userAccounts{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  Email String @unique
  Password String
  UserId String 
  isVerified Boolean @default(false)
  VerifyCode String
  VerifyCodeExpairy DateTime
  Address String
  PhoneNumber String
  UserName String
 createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  role String @default("USER") 
}
model products{
  id String @id @default(auto()) @map("_id") @db.ObjectId
   DealerPrice String
    Description String
     Price String
      SellingPrice String
      Title String @unique
       imageUrls  String[]
        createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}